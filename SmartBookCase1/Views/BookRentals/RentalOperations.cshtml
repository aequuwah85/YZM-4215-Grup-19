
@{
    ViewBag.Title = "RentalOperations";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h2>KİTAPLAR</h2>
<br />

@using (Html.BeginForm("RentalOperations", "BookRentals", FormMethod.Get))
{
    <p>
        Kitap Adı ile Arama: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}


<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>

            <th>Name</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Author</th>
            <th>Publisher-House</th>
            <th>Barcode</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.BookName</td>
                <td>@m.BookCategory</td>
                <td>@m.BookStock</td>
                <td>@m.BookAuthor</td>
                <td>@m.BookPublisherHouse</td>
                <td>@m.BookBarcode</td>

                <td><a href="/BookRentals/AddBookRental/@m.BookID" class=" btn btn-info"> On-Loan </a></td>
                <td><a href="/BookRentals/AllBookRental/@m.BookID" class=" btn btn-warning"> All-Rentals </a></td>
            </tr>
        }

    </tbody>



</table>





