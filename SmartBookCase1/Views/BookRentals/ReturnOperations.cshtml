
@{
    ViewBag.Title = "ReturnOperations";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h2>KİTAPLAR</h2>
<br />

@using (Html.BeginForm("ReturnOperations", "BookRentals", FormMethod.Get))
{
    <p>
        Tc.No ile Arama: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}


<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Üye Numarası</th>
            <th>Name</th>
            <th>Tc.No</th>
            <th>E-mail</th>
            <th>Phone</th>           

        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>@m.MemberID</td>
            <td>@m.MemberName</td>
            <td>@m.MemberTcNo</td>
            <td>@m.MemberEmail</td>
            <td>@m.MemberPhone</td>

            <td><a href="/BookRentals/ReturnBookRental/@m.MemberID" class=" btn btn-info"> Rentals </a></td>
           
        </tr>
        }

    </tbody>



</table>


