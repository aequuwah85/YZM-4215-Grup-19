
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">SMART-BOOKCASE</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Book-Archive <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/BookArchive/AddBook/">Add Book</a></li>
                        <li><a href="/BookArchive/ViewBook">View Books</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Members <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/Member/AddMember/">Add Member</a></li>
                        <li><a href="/Member/ViewMember">View Members</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"> Book-Rental <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/Member/AddMember/">Add Book-Rental</a></li>
                        
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (Session["UserName"] == null)
                {
                    <li><a href="/User/NewUser/"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                    <li><a href="/User/Login/"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                }
                else
                {
                    <li><a href="/User/Profile/"> @Session["UserName"].ToString() </a></li>
                    <li><a href="/User/Logout/"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                }

            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()

    </div>

    <div class="container">
        
        <br /><br /><br />
        <hr />     
        <footer>
            <p>&copy;  @DateTime.Now.Year    Library Automation System  </p>

        </footer>
       
    </div>
</body>
</html>
